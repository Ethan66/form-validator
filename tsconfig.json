{
   "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "baseUrl": ".",
        "typeRoots" : [
            "node_modules/@types"
        ],
        "declaration": true,
        "declarationMap": true,
        "types": ["jest"]
   },
   "paths": {
        "@App/*": ["__tests__/*"]
    },
   "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}